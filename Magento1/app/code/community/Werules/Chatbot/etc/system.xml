					<!--<enable_help_command_list translate="label"></enable_help_command_list>-->
					<!--<commands_list translate="label"></commands_list>-->
					<!--<enable_default_replies translate="label"></enable_default_replies>-->
					<!--<default_replies translate="label"></default_replies>-->
					<!--<enable_nlp_replies translate="label"></enable_nlp_replies>-->
